﻿@using eShop.UI.Models.Link

@if (LinkOption is not null)
{
    <button class="btn btn-link text-start text-decoration-none py-0 @(LinkOption.IsSelected ? "ps-0" : "ps-3")" @onclick="OnClick"> @* För att få pilen i våran meny att ha plats med samma pading på resten av Car motorcykel så gör bi detta *@ 
        @if (LinkOption.IsSelected)
        {
            <i class="bi-caret-right"></i>
        }
        @LinkOption?.Name
    </button>
}



@code {
    [Parameter] public LinkOption? LinkOption { get; set; }
    [Parameter] public EventCallback<int> OnLinkClick { get; set; }

    void OnClick()
    {
        if (OnLinkClick.HasDelegate && LinkOption is not null)
            OnLinkClick.InvokeAsync(LinkOption.Id);

    }
}